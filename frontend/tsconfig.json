{
	"include": ["src"],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"moduleResolution": "Node",
		"isolatedModules": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,

		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"outDir": "./public",
		"sourceMap": true,

		"strict": true,
		"jsx": "react-jsx",

		"baseUrl": "./src",
		"paths": {
			"assets/*": ["assets/*"],
			"components/*": ["components/*"],
			"lib/*": ["lib/*"]
		}
	}
}

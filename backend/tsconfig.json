{
	"include": ["src"],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"target": "ES2021",
		"lib": ["ES2021"],
		"module": "CommonJS",
		"moduleResolution": "Node",
		"isolatedModules": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,

		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"outDir": "./public",
		"sourceMap": true,

		"strict": true,

		"baseUrl": "./src",
		"paths": {
			"assets/*": ["assets/*"],
			"lib/*": ["lib/*"]
		}
	}
}
